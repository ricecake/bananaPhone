{erl_opts, [
	debug_info,
	inline_list_funcs,
	warn_deprecated_function,
	warn_export_all,
	warn_export_vars,
	warn_obsolete_guard,
	warn_shadow_vars,
	warn_untyped_record,
	warn_unused_function,
	warn_unused_import,
	warnings_as_errors
]}.

{relx, [
	{release, {'bananaPhone', "0.1.0"}, [
		'bananaPhone',
		sasl
	]},

	{sys_config, "./config/sys.config"},
	{vm_args, "./config/vm.args"},

	{dev_mode, true},
	{include_erts, false},

	{extended_start_script, true}
]}.

{profiles, [
	{prod, [
		{relx, [
			{dev_mode, false},
			{include_erts, true}
		]}
	]}
]}.

{erlydtl_opts, [
	{doc_root, "templates"}
]}.

{plugins, [
	{rebar3_erlydtl_plugin, {git, "https://github.com/ricecake/rebar3_erlydtl_plugin.git", {branch, "master"}}}
]}.

{deps, [
	{jiffy,   {git, "git://github.com/davisp/jiffy.git",      {branch, "master"}}},
	{erlydtl, {git, "https://github.com/erlydtl/erlydtl.git", {branch, "master"}}},
	{cowboy,  {git, "https://github.com/extend/cowboy.git",   {branch, "master"}}},
	{lager,   {git, "git://github.com/basho/lager",           {branch, "master"}}}
]}.
